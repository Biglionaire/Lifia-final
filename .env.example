# OPTIONAL (higher rate limit). LI.FI says API key is optional but recommended.
LIFI_API_KEY=your-lifi-api-key-here

# SELLER EXECUTOR (REQUIRED for auto-broadcast)
EXECUTOR_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Base RPC (public endpoint is rate-limited, OK for MVP)
BASE_RPC_URL=https://mainnet.base.org

# Optional: path for cached token scrape results
LIFI_TOKEN_CACHE_PATH=data/lifi_tokens.json

# Job fee: 1% (principal not cut; collected via Funds Transfer)
JOB_FEE_BPS=100
JOB_FEE_MIN_HUMAN=0

# 1% = 100 bps (change to 200 for 2%)
SERVICE_FEE_BPS=100

# Optional, integrator name for LI.FI analytics (does NOT add fee)
LIFI_INTEGRATOR=acp-agent

# RPC endpoints (fill in your own)
ETHEREUM_RPC_URL=https://your-ethereum-rpc-url
ARBITRUM_RPC_URL=https://your-arbitrum-rpc-url
POLYGON_RPC_URL=https://your-polygon-rpc-url
BSC_RPC_URL=https://your-bsc-rpc-url
